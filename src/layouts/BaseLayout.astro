---
import Seo from "../components/Seo.astro";
import site from "../../data/site.json";
interface Props {
  title?: string;
  description?: string;
  path?: string;
}
const { title, description, path } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Seo title={title} description={description} path={path} />
    <style>
      :root {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      }
      body {
        margin: 0;
        background: #fff;
        color: #111;
      }
      main {
        max-width: 760px;
        margin: 0 auto;
        padding: 24px 16px 48px;
      }
      header {
        border-bottom: 1px solid #e5e5e5;
        padding: 12px 16px;
      }
      footer {
        border-top: 1px solid #e5e5e5;
        padding: 16px;
        font-size: 13px;
        color: #555;
        margin-top: 32px;
      }
      nav a {
        margin-right: 12px;
        font-size: 14px;
        color: #0b63ce;
        text-decoration: none;
      }
      nav a:hover {
        text-decoration: underline;
      }
      a {
        color: #0b63ce;
      }
      h1,
      h2,
      h3 {
        font-weight: 600;
      }
      .disclaimer {
        border: 1px solid #ddd;
        background: #fafafa;
        padding: 10px 12px;
        font-size: 13px;
        margin: 12px 0 24px;
      }
      .official-link {
        display: inline-block;
        border: 1px solid #0b63ce;
        padding: 6px 10px;
        font-size: 14px;
        text-decoration: none;
      }
      .official-link:hover {
        background: #f4f8ff;
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/faq">FAQ</a>
      </nav>
    </header>
    <main><slot /></main>
    <footer>
      <div>{site.siteName}</div>
      <div>Educational content only. Not medical or treatment advice.</div>
      <div style="margin-top:8px">
        <a href={site.officialSite} target="_blank" rel="noopener noreferrer">
          Official Neoi Site
        </a>
      </div>
    </footer>
  </body>
</html>
