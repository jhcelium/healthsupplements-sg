---
import Seo from "../components/Seo.astro";
import site from "../../data/site.json";
interface Props {
  title?: string;
  description?: string;
  path?: string;
}
const { title, description, path } = Astro.props;
---
<!DOCTYPE html>
<html lang="en-SG">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Seo title={title} description={description} path={path} />
    <style>
      :root {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      }
      body {
        margin: 0;
        background: #fff;
        color: #111;
      }
      main {
        max-width: 760px;
        margin: 0 auto;
        padding: 24px 16px 48px;
      }
      header {
        border-bottom: 1px solid #e5e5e5;
        padding: 10px 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .header-logo {
        display: flex;
        align-items: center;
        flex-shrink: 0;
      }
      .header-logo img {
        height: 40px;
        width: auto;
        display: block;
        opacity: 0.9;
        transition: opacity 0.15s;
      }
      .header-logo:hover img {
        opacity: 1;
      }
      footer {
        border-top: 1px solid #e5e5e5;
        padding: 16px;
        font-size: 13px;
        color: #555;
        margin-top: 32px;
      }
      nav a {
        margin-right: 12px;
        font-size: 14px;
        color: #0b63ce;
        text-decoration: none;
      }
      nav a:hover {
        text-decoration: underline;
      }
      a {
        color: #0b63ce;
      }
      h1,
      h2,
      h3 {
        font-weight: 600;
      }
      .disclaimer {
        border: 1px solid #ddd;
        background: #fafafa;
        padding: 10px 12px;
        font-size: 13px;
        margin: 12px 0 24px;
      }
      .subtitle {
        font-size: 17px;
        color: #444;
        margin: 4px 0 20px;
        line-height: 1.5;
      }
      .cta-link {
        display: inline-block;
        border: 1px solid #0b63ce;
        padding: 8px 14px;
        font-size: 14px;
        text-decoration: none;
        margin-bottom: 24px;
      }
      .cta-link:hover {
        background: #f4f8ff;
      }
      .infographic {
        margin: 32px 0;
        padding: 0;
      }
      .infographic img {
        width: 100%;
        height: auto;
        display: block;
        border: 1px solid #e5e5e5;
        border-radius: 4px;
      }
      .infographic figcaption {
        font-size: 12px;
        color: #777;
        margin-top: 6px;
        text-align: center;
      }
      .brand-link {
        display: inline-block;
        border: 1px solid #999;
        color: #444;
        padding: 7px 13px;
        font-size: 14px;
        text-decoration: none;
      }
      .brand-link:hover {
        border-color: #555;
        color: #111;
        background: #f7f7f7;
      }
    </style>
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "MedicalWebPage",
      "name": "Health Supplements Singapore",
      "about": "Dietary supplements in Singapore",
      "audience": {
        "@type": "MedicalAudience",
        "audienceType": "Consumer"
      },
      "inLanguage": "en-SG"
    }
    </script>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/faq">FAQ</a>
      </nav>
      <a
        href="https://supplement.neoi.jp/en"
        target="_blank"
        rel="noopener"
        class="header-logo"
        aria-label="Visit Official Neoi Supplement Site"
      >
        <img src="/images/neoi-logo.png" alt="Neoi supplement.neoi.jp" />
      </a>
    </header>
    <main><slot /></main>
    <footer>
      <div>{site.siteName}</div>
      <div>Educational content only. Not medical or treatment advice.</div>
    </footer>
  </body>
</html>
